organizationExtensions: defineEnt({
  plan: v.string(),
  customerId: v.optional(v.string()),
  credits: v.number(),
  // ... your custom fields
})
  .field('organizationId', v.string(), { unique: true }) // Link to Better Auth organization
  .index('organizationId', ['organizationId']),

