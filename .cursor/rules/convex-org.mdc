export const useCanManage = (resource: string) => {
  const [canManage, setCanManage] = useState(false);

  useEffect(() => {
    authClient.organization
      .hasPermission({ permissions: { [resource]: ['manage'] } })
      .then(setCanManage);
  }, [resource]);

  return canManage;
