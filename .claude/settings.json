{
  "env": {
    "CLAUDE_CODE_FILE_READ_MAX_OUTPUT_TOKENS": "100000",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "MAX_THINKING_TOKENS": "31999"
  },
  "permissions": {
    "allow": ["Bash", "Edit", "Skill", "WebFetch", "WebSearch"],
    "additionalDirectories": ["../evergarden"]
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bun run format || true"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f \".claude/scripts/user-prompt-submit.sh\" ]; then .claude/scripts/user-prompt-submit.sh; fi"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f \".claude/scripts/session-start.sh\" ]; then .claude/scripts/session-start.sh; fi"
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f \".claude/scripts/post-compact.sh\" ]; then .claude/scripts/post-compact.sh; fi"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "dotai@dotai": true,
    "notification@dotai": true,
    "codex@dotai": true,
    "plan@dotai": true,
    "agents@dotai": true,
    "debug@dotai": true,
    "test@dotai": true,
    "skills@dotai": true,
    "git@dotai": true,
    "dev-browser@sawyerhood/dev-browser": true,
    "frontend-design@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true
  },
  "extraKnownMarketplaces": {
    "dotai": {
      "source": {
        "source": "github",
        "repo": "udecode/dotai"
      }
    },
    "sawyerhood/dev-browser": {
      "source": {
        "source": "github",
        "repo": "sawyerhood/dev-browser"
      }
    }
  }
}
