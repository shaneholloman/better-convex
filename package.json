{
  "name": "better-convex",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "check": "concurrently 'pnpm lint' 'eslint' 'pnpm typecheck'",
    "predev": "convex dev --until-success --run init",
    "dev": "concurrently 'pnpm dev:app' 'pnpm dev:backend'",
    "dev:app": "next dev --turbopack --port 3005",
    "dev:backend": "convex dev",
    "gen": "cd convex && npx @better-auth/cli generate -y --output authSchema.ts",
    "lint": "npx ultracite@latest check",
    "lint:fix": "npx ultracite@latest fix --unsafe",
    "nuke": "rimraf '**/node_modules'",
    "postinstall": "ruler apply",
    "reset": "convex run reset:reset && sleep 3 && convex run init",
    "seed": "convex run seed:seed",
    "start": "next start",
    "studio": "pnpm convex dashboard",
    "sync": "tsx scripts/sync-convex-env.ts",
    "sync:force": "tsx scripts/sync-convex-env.ts --force",
    "sync:plate": "node scripts/sync-plate.cjs",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "pnpm typecheck --watch"
  },
  "dependencies": {
    "@convex-dev/aggregate": "^0.1.25",
    "@convex-dev/better-auth": "0.9.7",
    "@convex-dev/rate-limiter": "^0.2.14",
    "@convex-dev/react-query": "0.0.0-alpha.11",
    "@convex-dev/resend": "^0.1.13",
    "@hookform/resolvers": "^5.2.2",
    "@react-email/components": "^0.5.7",
    "@react-email/render": "^1.4.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "5.90.6",
    "better-auth": "1.3.27",
    "better-auth-convex": "^0.4.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "common-tags": "^1.8.2",
    "convex": "1.28.2",
    "convex-ents": "^0.16.0",
    "convex-helpers": "0.1.104",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "jotai-x": "^2.3.3",
    "lucide-react": "^0.552.0",
    "next": "16.0.1",
    "next-themes": "^0.4.6",
    "nuqs": "2.7.2",
    "radix-ui": "latest",
    "react": "19.2.0",
    "react-day-picker": "^9.10.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.66.0",
    "react-resizable-panels": "^3.0.6",
    "recharts": "2.15.4",
    "sonner": "^2.0.7",
    "superjson": "^2.2.5",
    "tailwind-merge": "^3.3.1",
    "ts-essentials": "10.1.1",
    "tsx": "^4.20.6",
    "type-fest": "^5.2.0",
    "use-debounce": "^10.0.6",
    "vaul": "^1.1.2",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.3",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/common-tags": "^1.8.4",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@udecode/ruler": "^0.4.0",
    "babel-plugin-react-compiler": "^1.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "7.0.1",
    "lefthook": "^2.0.2",
    "tailwindcss": "^4.1.16",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.3",
    "ultracite": "6.2.1"
  },
  "packageManager": "pnpm@10.14.0",
  "pnpm": {
    "dangerouslyAllowAllBuilds": true,
    "ignoredBuiltDependencies": [
      "@tailwindcss/oxide"
    ]
  }
}
