{
  "name": "better-convex",
  "private": true,
  "workspaces": [
    "example",
    "packages/*",
    "www"
  ],
  "scripts": {
    "build": "bun --cwd www build",
    "build:pkg": "bun --cwd packages/better-convex build",
    "build:watch": "bun --cwd packages/better-convex build:watch",
    "check": "bun lint && bun typecheck && bun test",
    "dev": "bun --cwd www dev",
    "gen": "bun --cwd example gen",
    "postinstall": "bunx skiller@latest apply",
    "lint": "biome check && eslint",
    "lint:fix": "biome check --write",
    "release": "bun build:pkg && changeset publish",
    "start": "bun --cwd www start",
    "typecheck": "turbo typecheck",
    "typecheck:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "@convex-dev/better-auth": "0.10.10",
    "@tanstack/react-query": "5.90.20",
    "convex": "1.31.6",
    "convex-helpers": "0.1.111",
    "hono": "4.8.5",
    "next": "16.1.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@rollup/plugin-babel": "^6.1.0",
    "@types/node": "^25.1.0",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/parser": "8.54.0",
    "@typescript/native-preview": "^7.0.0-dev.20260129.1",
    "better-auth": "1.4.9",
    "bun-types": "^1.3.8",
    "eslint": "9.39.2",
    "eslint-plugin-react-hooks": "7.0.1",
    "turbo": "^2.8.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "ultracite": "6.4.1"
  },
  "packageManager": "bun@1.3.3"
}
