{
  "name": "better-convex",
  "private": true,
  "workspaces": [
    "example",
    "packages/*",
    "www"
  ],
  "scripts": {
    "build": "bun --cwd www build",
    "build:pkg": "bun --cwd packages/better-convex build",
    "build:watch": "bun --cwd packages/better-convex build:watch",
    "check": "bun lint && bun typecheck && bun test",
    "dev": "bun --cwd www dev",
    "gen": "bun --cwd example gen",
    "postinstall": "bunx skiller@latest apply",
    "lint": "biome check && eslint",
    "lint:fix": "biome check --write",
    "release": "bun build:pkg && changeset publish",
    "start": "bun --cwd www start",
    "typecheck": "turbo typecheck",
    "typecheck:watch": "tsc --noEmit --watch"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@typescript-eslint/parser": "8.48.1",
    "@typescript/native-preview": "^7.0.0-dev.20251217.1",
    "bun-types": "^1.3.5",
    "eslint": "9.39.2",
    "eslint-plugin-react-hooks": "7.0.1",
    "turbo": "^2.7.4",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.0",
    "ultracite": "6.4.1"
  },
  "packageManager": "bun@1.3.3"
}
