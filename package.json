{
  "name": "better-convex",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "predev": "convex dev --until-success --run init",
    "dev": "concurrently 'pnpm dev:app' 'pnpm dev:backend'",
    "dev:app": "next dev --turbopack --port 3005",
    "dev:backend": "convex dev",
    "dev:init": "tsx tooling/scripts/sync-convex-env.ts",
    "dev:sync": "tsx tooling/scripts/sync-convex-env.ts --force",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "nuke": "rimraf '**/node_modules'",
    "reset": "pnpm reset:auth && for tableName in `npx convex data`; do npx convex import --table $tableName --replace -y --format jsonLines /dev/null; done",
    "reset:auth": "convex run reset:resetAuth",
    "seed": "convex run seed:seed",
    "start": "next start",
    "studio": "pnpm convex dashboard",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "pnpm typecheck --watch"
  },
  "dependencies": {
    "@convex-dev/aggregate": "^0.1.21",
    "@convex-dev/better-auth": "0.7.11",
